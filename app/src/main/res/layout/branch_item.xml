<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".events.presentation.UpcomingEventsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_16dp">

        <TextView
            android:id="@+id/branch_title"
            android:layout_width="@dimen/textview_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="@string/branch_title"
            android:textColor="@color/branch_item_title_white"
            android:textSize="@dimen/acthello_texview_testsize_24sp"
            tools:ignore="InvalidId" />

        <ImageView
            android:id="@+id/btn_next_event"
            android:layout_width="@dimen/imageview_32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/padding_4dp"
            android:src="@drawable/ic_arrow_forward" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/branch_list_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/branch_current_event"
                layout="@layout/event_card_layout"
                android:layout_width="@dimen/card_size_320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_16dp"
                android:layout_marginRight="@dimen/margin_size_8dp" />

            <include
                android:id="@+id/branch_next_event"
                layout="@layout/event_card_layout"
                android:layout_width="@dimen/card_size_320dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_16dp" />
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
